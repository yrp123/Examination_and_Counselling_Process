@model Examination_and_Counselling_Process.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <div>
                <h1><i>Applicant's Registration Form.</i></h1>
            </div>
            <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                <form autcomplete="off" method="post" class="m-3 p-3" action="/Account/Register">
                    <div class="mb-3">
                        <h2 class="text-pink fst-italic">Register</h2>
                        <span class="fst-italic text-muted">Create your Account.</span>
                    </div>
                    <div class="mb-3">
                        @Html.ValidationSummary()
                    </div>
                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(m=>m.Name, new{ @class="form-control", placeholder="Name"})
                        <label for="Name">Name</label>
                    </div>
                    
                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(m=>m.Address, new{ @class="form-control", placeholder="Address"})
                        <label for="Address">Address</label>
                    </div>

                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(m=>m.Email, new{ @class="form-control", placeholder="Email"})
                        <label for="Email">Email</label>
                    </div>

                    
                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(m=>m.Password, new{ @class="form-control", placeholder="Password", type="password"})
                        <label for="Password">Password</label>
                    </div>

                     <div class="mb-3">
                    <button class="btn btn-sm btn-dark w-100 p-2 shadow-lg rounded" type="submit">Register</button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
